  <section class="producto">
    <h2>Piedra Canto Rodado Color Mixta</h2>
    <!-- Imagen referencial -->
    <img src="img/piedra-mixta.jpg" alt="Piedra Color Mixta" class="imagen-piedra">
    
    <!-- Descripción del producto -->
    <p>
      La piedra canto rodado color mixta combina una variedad de tonalidades naturales,
      ideal para jardinería, decoración de interiores y exteriores, y paisajismo personalizado.
    </p>

    <!-- Precios referenciales -->
    <h3>Precios:</h3>
    <ul>
      <li>20 kg - S/ 50</li>
      <li>40 kg - S/ 80</li>
    </ul>

    <!-- Sección de pedido interactivo -->
    <h3>Haz tu pedido:</h3>
    <label for="bolsas20">Bolsas de 20 kg:</label>
    <input type="number" id="bolsas20" value="0" min="0"><br>

    <label for="bolsas40">Bolsas de 40 kg:</label>
    <input type="number" id="bolsas40" value="0" min="0"><br>

    <p>Total: <strong id="totalPrecio">S/ 0</strong></p>

    <!-- Botón para enviar pedido por WhatsApp -->
    <button onclick="enviarPedido()">Realizar pedido por WhatsApp</button>
  </section>

  <footer>
    <p>&copy; 2025 EcoRoca</p>
  </footer>

  <script>
    // Precios por bolsa
    const precio20 = 50; // Precio para bolsa de 20 kg
    const precio40 = 80; // Precio para bolsa de 40 kg

    // Elementos del DOM
    const bolsas20 = document.getElementById("bolsas20");
    const bolsas40 = document.getElementById("bolsas40");
    const total = document.getElementById("totalPrecio");

    // Actualiza el total cuando cambian los inputs
    function actualizarTotal() {
      const totalCalc = (parseInt(bolsas20.value) || 0) * precio20 + (parseInt(bolsas40.value) || 0) * precio40;
      total.textContent = `S/ ${totalCalc}`;
    }

    // Enviar pedido por WhatsApp
    function enviarPedido() {
      const cantidad20 = parseInt(bolsas20.value) || 0;
      const cantidad40 = parseInt(bolsas40.value) || 0;
      const totalFinal = cantidad20 * precio20 + cantidad40 * precio40;

      const mensaje = `Hola, quiero hacer un pedido de Piedra Canto Rodado Color Mixta:\n- ${cantidad20} bolsa(s) de 20 kg\n- ${cantidad40} bolsa(s) de 40 kg\nTotal: S/ ${totalFinal}\n\n¿Podrías confirmarme la disponibilidad?`;

      const numero = "51917285203"; // Número de contacto WhatsApp de EcoRoca (Perú)
      const url = `https://wa.me/${numero}?text=${encodeURIComponent(mensaje)}`;
      window.open(url, "_blank");
    }

    // Eventos
    bolsas20.addEventListener("input", actualizarTotal);
    bolsas40.addEventListener("input", actualizarTotal);
  </script>
</body>
